div.p3.bg-white.rounded.mt3
  h3.mt0.light-gray.regular Hints
  
  table(ng-if="::vm.level.hints").table-light
    thead.bold.bg-darken-1
      tr
        th Hint
        th Price
        th
    tbody
      tr(ng-repeat="hint in ::vm.level.hints")
        td {{hint.name}}
        td {{hint.price}}
        td.right-align
          button.button(ng-click="vm.buyHint(hint)") Buy
