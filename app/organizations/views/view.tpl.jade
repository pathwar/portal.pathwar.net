div.p3.mb3.rounded.bg-white.clearfix.shadow-bottom
  img(ng-src="{{::vm.organization.getAvatarUrl(150)}}", width="150", height="150").rounded.left.mr3
  div
    h1.m0.ucfirst {{::vm.organization.name}}
    h4.mt0.light-gray Formed 2012
    h4 Paris, France

div.clearfix.mxn2
  div.md-col.md-col-6.px2
    h2.mt0.regular.mid-gray Statistics
    div.p3.mb3.rounded.bg-white.shadow-bottom
      p.gray Score: {{::vm.organization.statistics.score}}
        
      p.gray Gold Medals: {{::vm.organization.statistics.gold_medals}}

      p.gray Silver Medals: {{::vm.organization.statistics.silver_medals}}
      
      p.gray Bronze Medals: {{::vm.organization.statistics.bronze_medals}}
      
      p.gray Achievements: {{::vm.organization.statistics.achievements}}
      

  div.md-col.md-col-6.px2
    h2.mt0.regular.mid-gray Achievements
    div.p2.rounded.bg-white.shadow-bottom
        
      svg(height="48", width="48").bg-lightest-gray.rounded.p1.ml1.mr1
        use(xlink:href="assets/icons/defs/svg/sprite.defs.svg#flash")
        
      svg(height="48", width="48").bg-lightest-gray.rounded.p1.ml1.mr1
        use(xlink:href="assets/icons/defs/svg/sprite.defs.svg#3d-glasses")
