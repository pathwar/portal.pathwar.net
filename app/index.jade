doctype html
html(ng-app="portal", lang="en")
  head
    title Pathwar Portal

    base(href="#{BASE_PATH}")

    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no")

    //- bower:css
    //- endinject

    //- inject:css
    //- endinject

  body(ng-class="{frontpage: state == 'home'}").bg-lighter-gray

    div.side-menu.bg-dark-gray.md-show
      a(ui-sref="home").button.button-nav-light.py2
        img(src="#{BASE_PATH}assets/img/logo.png", width="32", height="32").rounded.avatar-button-left.ml0
      nav.mt3
        a.button.button-nav-dark.block(ui-sref="home").h3
          i.fa.fa-tachometer
          |&nbsp; Dashboard
        a.button.button-nav-dark.block(ui-sref="crud.list")
          i.fa.fa-lock
          |&nbsp; CRUD
        a.button.button-nav-dark.block(ui-sref="levels.list")
          i.fa.fa-desktop
          |&nbsp; Levels
        a.button.button-nav-dark.block(ui-sref="users.list")
          i.fa.fa-users
          |&nbsp; Users
        a.button.button-nav-dark.block(ui-sref="news.list")
          i.fa.fa-rss
          |&nbsp; News
        a.button.button-nav-dark.block(ui-sref="organizations.list")
          i.fa.fa-building-o
          |&nbsp; Organizations


    nav.clearfix.white.bg-mid-gray.fixed.top-0.right-0.left-0.has-side-menu.z1(ng-controller="NavCtrl as nav")

      // Anonymous
      div.sm-col-right(ng-if="!nav.isAuthentificated()")
        a(ui-sref="login").button.button-nav-dark.py2 Login
        a(ui-sref="register").button.button-nav-dark.py2 Register

      // Logged in
      div(ng-show="nav.isAuthentificated()")

        div(data-disclosure, style="vertical-align: top").inline-block
          div(data-details).fixed.top-0.right-0.bottom-0.left-0
          div.relative
            a.button.button-narrow.button-nav-dark.py2.px1
              img(ng-src="https://www.gravatar.com/avatar/{{currentUser.organization.gravatar_hash}}?s=32&d=mm", width="32", height="32").rounded.avatar-button
              | {{currentUser.organization.name}}
              i.fa.fa-sort-down.icon-button
              // FIXME: add the current session name {{currentUser.organization.session}}
            div(data-details).absolute.left-0.mt1.nowrap.bg-blue.rounded.animation-fadein.z1.ml1
              a(href="#").button.block.button-nav-dark.py2.px1
                img(src="//placehold.it/32x32", width="32", height="32").rounded.avatar-button-left.ml0
                | Motorcycle
                // FIXME: add the session name
              a(href="#").button.block.button-nav-dark.py2.px1
                img(src="//placehold.it/32x32", width="32", height="32").rounded.avatar-button-left.ml0
                | Anjunabeats
              a(href="#").button.block.button-nav-dark.py2.px1
                img(src="//placehold.it/32x32", width="32", height="32").rounded.avatar-button-left.ml0
                | Chinese Army
              a(ui-sref="createOrganization").button.block.button-nav-dark.bg-dark-gray.py2.px1.center.rounded-bottom
                | New

        //
        // User Menu
        //
        div(data-disclosure, style="vertical-align: top").inline-block.right
          div(data-details).fixed.top-0.right-0.bottom-0.left-0
          div.relative
            a.button.button-narrow.py2.px1.button-nav-dark.regular
              img(ng-src="https://www.gravatar.com/avatar/{{currentUser.user.gravatar_hash}}?s=32&d=mm", width="32", height="32").rounded.avatar-button
            div(data-details).absolute.right-0.mt1.nowrap.bg-blue.rounded.animation-fadein.z1.mr1
              a(href="#").button.block.button-nav-dark.py2.px1
                | Profile
              a(ng-click="nav.logout()").button.block.button-nav-dark.py2.px1
                | Log out
        
        //
        // Money
        //
        div(data-disclosure).inline-block.right
          div(data-details).fixed.top-0.right-0.bottom-0.left-0
          div.relative
            a.button.button-nav-dark.py2.px1.relative
              i.fa.fa-usd
              div.rounded.bg-yellow.h6.px1.inline-block {{currentUser.statistics.cash}}
            div(data-details).absolute.right-0.mt1.nowrap.bg-blue.rounded.animation-fadein.z1
              a(href="#").button.block.button-nav-dark.py2.px1
                | Redeem a coupon
              
        //
        // Notifications
        //
        div(data-disclosure).inline-block.right
          div(data-details).fixed.top-0.right-0.bottom-0.left-0
          div.relative
            a.button.button-nav-dark.py2.px1.relative
              i.fa.fa-bell-o
              div.rounded.bg-red.h6.px1.inline-block 25
            div(data-details).absolute.right-0.mt1.nowrap.bg-blue.rounded.animation-fadein.z1
              h2 Notifications

    div.p3.has-side-menu.content(ui-view)

